class Solution {
       public static int minimumNumber(int N, int[] arr) {
        boolean isOddElePresent = false;
        for(int ele : arr) {
            if(ele%2 == 1) {
                isOddElePresent = true;
            }
        }
        if(isOddElePresent == false) {
            return 2;
        } else {
            return 1; 
        }
    }
}
